@model IEnumerable<aspmvc.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@if (!Model.Any())
{
    <p>No Movies found</p>
}
else {

    foreach(var movie in Model)
    {
    <ul>
        <li>@Html.ActionLink(movie.Name, "MovieDetails", "Movies", new { id = movie.ID}, null)</li>
    </ul>
    }


}